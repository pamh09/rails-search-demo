<p id="notice"><%= notice %></p>
<h1>Backups</h1>
<%= render :partial => 'search' %>
<table>
    <tr>
      <th>Id</th>
      <th>Component</th>
	  <th>Backup</th>
      <th colspan="3"></th>
    </tr>
    <% @backups.each do |backup| %>
      <tr>
        <td><%= backup.id %></td>
        <td><%= backup.component.name %></td>
		<td><%= backup.backup_medium.name %></td>
        <td><%= link_to 'Show', backup %></td>
        <td><%= link_to 'Edit', edit_backup_path(backup) %></td>
        <td><%= link_to 'Destroy', backup, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
</table>
<%= link_to 'New Backup', new_backup_path %>
