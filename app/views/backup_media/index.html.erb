<p id="notice"><%= notice %></p>

<h1>Backup Media</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @backup_media.each do |backup_medium| %>
      <tr>
        <td><%= backup_medium.name %></td>
        <td><%= link_to 'Show', backup_medium %></td>
        <td><%= link_to 'Edit', edit_backup_medium_path(backup_medium) %></td>
        <td><%= link_to 'Destroy', backup_medium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

